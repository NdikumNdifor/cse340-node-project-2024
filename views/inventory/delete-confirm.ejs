<% if (title) { %>
    <h1 class="main-h"><%= title %></h1>
    <%# messages() %>
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <% } else {
     res.redirect('/')
    } %>

<div id="inv-container" >
    <p>Confirm Deletion - The delete is permanent.</p>
    <form action="/inv/delete" method="post" id="updateForm">
        <br>
        <label class="top">Make:
            <input type="text" id="make" name="inv_make" minlength="3" required placeholder="Min of 3 characters" value="<%= locals.inv_make %>" readonly>
        </label>

        <label class="top">Model:
            <input type="text" id="model" name="inv_model" minlength="3" required placeholder="Min of 3 characters" value="<%= locals.inv_model %>" readonly>
        </label>

        <label class="top">Year*
            <input type="text" id="year" name="inv_year" pattern="^\d{4}$" required value="<%= locals.inv_year %>" readonly>
        </label>

        <label class="top">Price*
            <input type="number" id="price" name="inv_price" min="0" step="0.01" required value="<%= locals.inv_price %>" readonly>
        </label>

        <input type="submit" value="Delete Inventory Item" class="submitBtn">

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>

