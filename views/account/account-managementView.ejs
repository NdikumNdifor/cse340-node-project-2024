<% if (title) { %>
    <h1 class="main-h"><%= title %></h1>
    <%- messages() %>
    <!-- Test View Error Display -->
    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    <!-- ends here -->

    <% } else {
     res.redirect('/')
    } %>

<!-- Implement a welcome message to welcome them
with their first name when user is log in, 
and provide them with different content depending on their account_type. -->
<% if (locals.loggedin && locals.accountData.account_type === "Client") { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You are login!</p>
  <a href="/account/changeAccountInfo/<%= locals.accountData.account_id %>">Update Personal Account Information</a>
<% } else { %>
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <p>You are login!</p>
  <a href="/account/changeAccountInfo/<%= locals.accountData.account_id %>">Update Personal Account Information</a>
  <h3>Inventory Management</h3>
  <p><a href="/inventory/inv">Edit Account Information</a></p>
<% } %>


